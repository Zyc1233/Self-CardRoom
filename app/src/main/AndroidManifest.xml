<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CardRoom1"
        tools:targetApi="31">
        <activity
            android:name=".TabBarActivity"
            android:exported="true"
            android:label="@string/title_activity_tab_bar"
            android:theme="@style/Theme.CardRoom1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OwnActivity"
            android:exported="false"
            android:label="@string/title_activity_own"
            android:theme="@style/Theme.CardRoom1" />
        <activity
            android:name=".ReservationActivity"
            android:exported="false"
            android:label="@string/title_activity_reservation"
            android:theme="@style/Theme.CardRoom1" />
        <activity
            android:name=".RoomActivity"
            android:exported="false"
            android:label="@string/title_activity_room"
            android:theme="@style/Theme.CardRoom1" />
        <activity
            android:name=".SituationActivity"
            android:exported="false"
            android:label="@string/title_activity_situation"
            android:theme="@style/Theme.CardRoom1" />
        <activity
            android:name=".IndexActivity"
            android:exported="false"
            android:label="@string/title_activity_index"
            android:theme="@style/Theme.CardRoom1" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.CardRoom1" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CardRoom1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ForgetActivity"
            android:exported="false"
            android:label="@string/title_activity_forget"
            android:theme="@style/Theme.CardRoom1" />
    </application>

</manifest>